<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lr_detail"
    xmlns:customtv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layoutAnimation="@anim/list_layout_controller"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/add_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:background="#fff"
            android:contentDescription="@string/app_name"
            android:src="@drawable/student_icon" />

        <com.sharmastech.skillhouettes.controls.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_alignTop="@+id/iv_icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_icon"
            android:layout_toRightOf="@+id/iv_icon"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Add Student"

            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            customtv:fontType="5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_student_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_icon_skill"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="#fff"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/student_icon" />

        <com.sharmastech.skillhouettes.controls.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon_skill"
            android:layout_alignTop="@+id/iv_icon_skill"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_icon_skill"
            android:layout_toRightOf="@+id/iv_icon_skill"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Student Skills"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            customtv:fontType="5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_student_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_icon_con"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/student_feed" />

        <com.sharmastech.skillhouettes.controls.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon_con"
            android:layout_alignTop="@+id/iv_icon_con"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_icon_con"
            android:layout_toRightOf="@+id/iv_icon_con"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Student Feedback"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            customtv:fontType="5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_student_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_icon_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/student_icon" />

        <com.sharmastech.skillhouettes.controls.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_icon_share"
            android:layout_alignTop="@+id/iv_icon_share"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_icon_share"
            android:layout_toRightOf="@+id/iv_icon_share"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Contact Us"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            customtv:fontType="5" />

    </RelativeLayout>

</LinearLayout>