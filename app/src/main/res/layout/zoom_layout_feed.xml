<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/textGray"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stu_image"
            android:layout_gravity="center"
            android:id="@+id/ll_frame_green"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_er_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/green_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_as_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_er_1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_er_1"
                android:background="@drawable/green_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_rs_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_as_1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_as_1"
                android:background="@drawable/green_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_ss_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/tv_rs_1"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_rs_1"
                android:background="@drawable/green_color"
                android:gravity="center"
                android:textSize="20dp" />
        </RelativeLayout>
    <FrameLayout
        android:id="@+id/ll_fram3"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/stu_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/textGray"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stu_image"
            android:id="@+id/bounce_images"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_er"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_img"
                android:gravity="center"
                android:text="E"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_as"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_er"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_er"
                android:background="@drawable/circle_img"
                android:gravity="center"
                android:text="A"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_rs"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_as"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_as"
                android:background="@drawable/circle_img"
                android:gravity="center"
                android:text="R"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_ss"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/tv_rs"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_rs"
                android:background="@drawable/circle_img"
                android:gravity="center"
                android:text="S"
                android:textSize="20dp" />
        </RelativeLayout>
    </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stu_image"
            android:layout_gravity="center"
            android:id="@+id/ll_frame_red"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_er_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/red_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_as_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_er_2"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_er_2"
                android:background="@drawable/red_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_rs_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/tv_as_2"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_as_2"
                android:background="@drawable/red_color"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_ss_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/tv_rs_2"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/tv_rs_2"
                android:background="@drawable/red_color"
                android:gravity="center"
                android:textSize="20dp" />
        </RelativeLayout>

</LinearLayout>